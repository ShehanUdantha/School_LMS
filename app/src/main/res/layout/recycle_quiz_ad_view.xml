<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp"
    android:layout_margin="5dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/li1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Question:"
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="a."
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Answer1:"
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li2"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="b."
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Answer2:"
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="c."
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Answer3:"
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li4"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="d."
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Answer4:"
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li5"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Correct Answer is:"
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/correct_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text=""
                android:textColor="@color/lightBluePro"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/li6"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnEdit5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="19dp"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="@color/green"></ImageView>

            <ImageView
                android:id="@+id/btnDelete5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/red"></ImageView>

        </LinearLayout>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>